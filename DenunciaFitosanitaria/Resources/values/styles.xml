<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hint</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="CounterStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
     <style name="ErrorStyle" parent="TextAppearance.Design.Error">
        <item name="android:textColor">#F1AF43</item>
    </style>

    <style name="DlgAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="DlgAnimationMap">
        <item name="android:windowEnterAnimation">@anim/slide_up_map</item>
        <item name="android:windowExitAnimation">@anim/slide_down_map</item>
    </style>

    <style name="DenunciaFitosanitaria.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/limon</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style> 
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">  
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
        <item name="textColorError">#F1AF43</item>
    </style>

    <style name="DenunciaFitosanitaria.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    </style>
    
    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
    <item name="android:windowNoTitle">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Drawer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">#0C92CF</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>  

    <style name="MyButton" parent="Theme.AppCompat.Light">  
        <item name="colorControlHighlight">@color/colorPrimary</item>
        
    </style>  

    <!--PROGRESSBAR ESTILOS-->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">  
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">  
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:progressBackgroundTint">@color/colorPrimary</item>
    </style> 
    
    <!--botones de coloRes Flat con efecto material-->
    <style name="AppTheme.FlatButton">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/highlight_light</item>
    </style>

    <style name="AppTheme.FlatButton.Primary">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.FlatButton.Accent">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TabThemesIndex" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>


    <!--FAB-->
    <!-- Overriding sizes of the FAB -->
    <!--dimen name="design_fab_size_normal">90dp</dimen-->
    <dimen name="design_fab_size_mini">40dp</dimen>
    <style name="MyFloatingButton" parent="Theme.AppCompat.Light">  
    <item name="colorAccent">@color/colorFab</item>
</style>  
    
</resources>

    
    